<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.MainActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toolbar_logo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/patudo" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Patudo"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Banner Image (1/3 da tela) -->

    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/banner"
        app:layout_constraintHeight_percent="0.33"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- Avatar Image (50% sobre o banner) -->

    <ImageView
        android:id="@+id/avatar_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/rounded_avatar_border"
        android:scaleType="centerCrop"
        android:src="@drawable/snoopy"
        android:translationY="10dp"
        app:layout_constraintBottom_toBottomOf="@id/banner_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_image"
        app:layout_constraintVertical_bias="0.5" />

    <!-- TextView à direita do avatar -->
    <TextView
        android:id="@+id/name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25sp"
        android:fontFamily="@font/roboto_bold"
        android:scaleType="centerCrop"
        android:text="Snoopy"
        android:textColor="@color/black"
        android:textSize="38sp"
        android:textStyle="bold"
        android:translationY="10dp"
        app:layout_constraintBottom_toBottomOf="@id/avatar_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/avatar_image" />

    <ImageView
        android:id="@+id/iconInfo1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/profile1"
        app:layout_constraintBottom_toBottomOf="@id/textVacina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textVacina" />

    <!-- TextView abaixo com infos -->
    <TextView
        android:id="@+id/textVacina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/lato"
        android:text="Próxima vacina a ..."
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconInfo1"
        app:layout_constraintTop_toBottomOf="@id/avatar_image" />

    <ImageView
        android:id="@+id/iconInfo2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/profile4"
        app:layout_constraintBottom_toBottomOf="@id/textMedicacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textMedicacao" />

    <TextView
        android:id="@+id/textMedicacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25sp"
        android:fontFamily="@font/lato"
        android:text="Próxima medicação a ..."
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconInfo2"
        app:layout_constraintTop_toBottomOf="@id/textVacina" />

    <ImageView
        android:id="@+id/iconInfo3"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/profile4"
        app:layout_constraintBottom_toBottomOf="@id/textProtecao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textProtecao" />

    <TextView
        android:id="@+id/textProtecao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25sp"
        android:fontFamily="@font/lato"
        android:text="Próxima proteção a ..."
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconInfo3"
        app:layout_constraintTop_toBottomOf="@id/textMedicacao" />

    <ImageView
        android:id="@+id/iconInfo4"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/profile3"
        app:layout_constraintBottom_toBottomOf="@id/textGrooming"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textGrooming" />

    <TextView
        android:id="@+id/textGrooming"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25sp"
        android:fontFamily="@font/lato"
        android:text="Última estética a ..."
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconInfo4"
        app:layout_constraintTop_toBottomOf="@id/textProtecao" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/textGrooming"
        android:id="@+id/linha"/>

    <TextView
        android:id="@+id/textAnotacoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="25sp"
        android:fontFamily="@font/lato"
        android:text="Anotações ..."
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linha" />

    <!-- Três botões horizontais -->
    <Button
        android:id="@+id/btnDadosCanino"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="25sp"
        android:background="@color/black"
        android:elevation="4dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Dados"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSaude"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSaude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="25sp"
        android:background="@color/black"
        android:elevation="4dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Saúde"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnContatos"
        app:layout_constraintStart_toEndOf="@id/btnDadosCanino"
        app:layout_constraintTop_toTopOf="@id/btnDadosCanino" />

    <Button
        android:id="@+id/btnContatos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="25sp"
        android:background="@color/black"
        android:elevation="4dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Contatos"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSaude"
        app:layout_constraintTop_toTopOf="@id/btnDadosCanino" />


</androidx.constraintlayout.widget.ConstraintLayout>